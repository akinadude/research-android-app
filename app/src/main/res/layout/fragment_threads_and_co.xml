<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/threads_and_co_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="22sp"
        android:text="100k threads vs 100k cotoutines"
        app:layout_constraintBottom_toTopOf="@+id/co_start_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/threads_start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start threads"
        app:layout_constraintBottom_toTopOf="@+id/co_start_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/threads_and_co_text_view" />

    <Button
        android:id="@+id/co_start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start coroutines"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/threads_start_btn" />

</android.support.constraint.ConstraintLayout>